<h1>
	<% if current_cardlist.nil? %>
		New Cardlist
	<% else %>	
	  <%= "Current Cardlist" %> (<%= current_cardlist.card_count %>)
	<% end %>
</h1>

<% if current_cardlist.nil? %>
  <h2>Use Search to add cards.</h2>
<% else %>
	<h2><%= current_cardlist.title %></h2>
	<ul id="cardlist">
		<%= form_tag "#", :autocomplete => "off" do %>
  		<%= render :partial => "home/cardlist_item", :collection => current_cardlist.cardlist_items.sort{ |a,b| a.card.title <=> b.card.title } %>
		<% end %>
	</ul>
<% end %>

<% if current_cardlist && current_cardlist.cardlist_items.any? %>
	<div class = "button_container">
	    <%= form_tag("/cardlists/#{current_cardlist.id.to_s}.pdf", :method => "get") do %>
	      <%= submit_tag "Print" , :class => "button" %>
	    <% end %>
	</div>

	<div class = "button_container">
	    <%= form_tag :url => { :action => "clear_current_cardlist" }, :remote => true do %>
	      <%= submit_tag "Clear" , :class => "button" %>
	    <% end %>
	</div>
<% end %>
  
