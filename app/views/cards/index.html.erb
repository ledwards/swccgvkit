<div id="image_header">
	<%= image_tag "card_database.gif", {:alt => "Card Database", :id => ""} %>
	<% if @current_user.has_role?(:admin) %>
		<ul>
			<li><%= link_to "Show cards with missing images", cards_path(:missing => "true") %></li>
		</ul>
	<% end %>
</div>

<div id="notice">
	<%= flash[:notice]%>
</div>

<div id="cards">
	<p><%= link_to 'Add a card', new_card_path %></p>
	<% for card in @cards %>
			<%= render :partial => "card", :object => card %>
	<% end %>
	<p><%= link_to 'Add a card', new_card_path %></p>
</div>